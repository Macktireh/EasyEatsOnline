  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask Run",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "manage.py",
        "FLASK_DEBUG": "1"
      },
      "args": ["run", "-h", "localhost", "--debugger", "--reload"],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Flask DB Migrate",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "manage.py",
        "FLASK_DEBUG": "1"
      },
      "args": ["db", "migrate"],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Flask DB Upgrade",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "manage.py",
        "FLASK_DEBUG": "1"
      },
      "args": ["db", "upgrade"],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Flask Test",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "manage.py",
        "FLASK_DEBUG": "1"
      },
      "args": ["test"],
      "jinja": true,
      "justMyCode": true
    }
  ]
}
